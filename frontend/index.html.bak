                const posteriorProb = posteriorOdds / (1 + posteriorOdds);
                return {
                    value: posteriorProb,
                    label: `>${lr}x update`,
                    color: colors[index % colors.length]
                };
            });


            // Reverse thresholds for legend order (highest to lowest)
            const thresholdsReversed = [...thresholds].reverse();

